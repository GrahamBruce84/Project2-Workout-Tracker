<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.grahambruce.workouttracker.WorkoutListActivity"
    android:onClick="onClick">

    <ExpandableListView
        android:id="@+id/lvExp"
        style="@android:style/Widget.DeviceDefault.Light.ExpandableListView"
        android:layout_width="fill_parent"
        android:layout_height="551dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/new_workout_button"
        tools:layout_editor_absoluteX="0dp"></ExpandableListView>

    <Button
        android:id="@+id/new_workout_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickNewWorkout"
        android:text="Add New Workout"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
